{
    "name": "nomad42/loggable",
    "description": "PSR-3 compatible log message interface",
    "keywords": [
        "NoMad42",
        "loggable"
    ],
    "homepage": "https://github.com/nomad42/loggable",
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur Makarov",
            "email": "nomad42@nomad42.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "NoMad42\\Loggable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NoMad42\\Loggable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
